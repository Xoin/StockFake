<%- include('partials/footer', {
    pageScripts: `
    <script>
let availableYears = [];
        let currentGameYear = new Date().getFullYear();

        async function loadGameTime() {
            try {
                const response = await fetch('/api/time');
                const data = await response.json();
                currentGameYear = new Date(data.currentTime).getFullYear();
                await loadAvailableYears();
            } catch (error) {
                console.error('Error loading game time:', error);
            }
        }

        async function loadAvailableYears() {
            try {
                const response = await fetch('/api/taxes');
                const data = await response.json();
                availableYears = data.yearsWithTaxes;
                
                const yearSelect = document.getElementById('taxYear');
                yearSelect.innerHTML = '';
                
                // Add current year even if no taxes yet
                if (!availableYears.includes(currentGameYear)) {
                    availableYears.unshift(currentGameYear);
                }
                
                availableYears.forEach(year => {
                    const option = document.createElement('option');
                    option.value = year;
                    option.textContent = year;
                    if (year === currentGameYear) {
                        option.selected = true;
                    }
                    yearSelect.appendChild(option);
                });
                
                // Load current year data
                loadTaxData();
            } catch (error) {
                console.error('Error loading available years:', error);
            }
        }

        async function loadTaxData() {
            const year = document.getElementById('taxYear').value;
            
            try {
                const response = await fetch(\`/api/taxes?year=\${year}\`);
                const data = await response.json();
                
                // Update year display
                document.getElementById('currentYear').textContent = data.year;
                
                // Update tax breakdown
                document.getElementById('capitalGainsTax').textContent = data.taxBreakdown.capitalGains.toFixed(2);
                document.getElementById('shortGainsTax').textContent = data.taxBreakdown.shortGains.toFixed(2);
                document.getElementById('dividendTax').textContent = data.taxBreakdown.dividends.toFixed(2);
                document.getElementById('totalTax').textContent = data.taxBreakdown.total.toFixed(2);
                
                // Update dividend summary
                document.getElementById('dividendCount').textContent = data.dividendSummary.count;
                document.getElementById('dividendGross').textContent = data.dividendSummary.totalGross.toFixed(2);
                document.getElementById('dividendTaxDetail').textContent = data.dividendSummary.totalTax.toFixed(2);
                document.getElementById('dividendNet').textContent = data.dividendSummary.totalNet.toFixed(2);
                
                // Update capital gains summary
                document.getElementById('salesCount').textContent = data.capitalGainsSummary.totalSales;
                document.getElementById('totalProceeds').textContent = data.capitalGainsSummary.totalProceeds.toFixed(2);
                document.getElementById('capitalGainsTaxDetail').textContent = data.capitalGainsSummary.totalTax.toFixed(2);
                
                // Update tax rates
                document.getElementById('shortTermRate').textContent = data.currentTaxRates.shortTermCapitalGains;
                document.getElementById('longTermRate').textContent = data.currentTaxRates.longTermCapitalGains;
                document.getElementById('dividendRate').textContent = data.currentTaxRates.dividends;
                
                // Update detailed transactions
                const tbody = document.getElementById('taxTransactions').querySelector('tbody');
                tbody.innerHTML = '';
                
                if (data.detailedTaxes.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="4" style="text-align: center; color: #00aa00;">No tax transactions for this year</td></tr>';
                } else {
                    data.detailedTaxes.forEach(tax => {
                        const row = document.createElement('tr');
                        const date = new Date(tax.date);
                        
                        row.innerHTML = \`
                            <td>\${date.toLocaleDateString()}</td>
                            <td>\${formatTaxType(tax.type)}</td>
                            <td class="negative">-$\${tax.amount.toFixed(2)}</td>
                            <td>\${tax.description}</td>
                        \`;
                        tbody.appendChild(row);
                    });
                }
            } catch (error) {
                console.error('Error loading tax data:', error);
            }
        }

        function formatTaxType(type) {
            const types = {
                'capital-gains': 'Capital Gains',
                'short-gains': 'Short Sale Gains',
                'dividend': 'Dividend Income'
            };
            return types[type] || type;
        }

        // Load data on page load
        loadGameTime();
        
        // Refresh every 5 seconds
        setInterval(loadTaxData, 5000);
    </script>
    <script>
async function updateEraTheme() {
            const response = await fetch('/api/time');
            const data = await response.json();
            const gameDate = new Date(data.currentTime);
            const year = gameDate.getFullYear();
            applyEraTheme(year);
        }
        
        updateEraTheme();
        setInterval(updateEraTheme, 10000);
    </script>
    `
}) %>
