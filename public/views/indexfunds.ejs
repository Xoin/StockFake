<%- include('partials/footer', {
    pageScripts: `
    <script src="/asset-filter.js"></script>
    <script>
let selectedFund = null;
        let currentAccountData = null;
        let currentPrice = 0;
        let tradingFee = 0;
        let allFunds = [];
        let assetFilter = null;
        
        async function loadFunds() {
            try {
                const response = await fetch('/api/indexfunds');
                allFunds = await response.json();
                
                // Add type property for filtering
                allFunds = allFunds.map(f => ({...f, type: 'indexfunds'}));
                
                // Initialize asset filter if not already done
                if (!assetFilter) {
                    // Get unique categories from funds
                    const categories = [...new Set(allFunds.map(f => f.category).filter(c => c))].sort();
                    
                    assetFilter = new AssetFilter({
                        containerId: 'filterSidebar',
                        availableTypes: ['indexfunds'],
                        availableSectors: categories,
                        sectorLabel: 'Category',
                        showSectors: true,
                        showPriceRange: true,
                        onFilterChange: (filters) => {
                            filterFunds();
                        }
                    });
                }
                
                filterFunds();
            } catch (error) {
                console.error('Error loading funds:', error);
                const tbody = document.getElementById('fundsBody');
                if (tbody) {
                    tbody.innerHTML = '<tr><td colspan="6" style="text-align: center; color: #ff0000;">Error loading index funds. Please check console for details.</td></tr>';
                }
            }
        }
        
        // Filter funds based on asset filter
        function filterFunds() {
            let filteredFunds = allFunds;
            
            // Apply asset filter if it exists - map category to sector for filtering
            if (assetFilter) {
                filteredFunds = allFunds.filter(f => assetFilter.matchesFilter({...f, sector: f.category}));
            }
            
            const tbody = document.getElementById('fundsBody');
            if (!tbody) return;
            
            if (filteredFunds.length === 0 && allFunds.length === 0) {
                tbody.innerHTML = '<tr><td colspan="6" style="text-align: center;">No index funds available yet. They will become available as time progresses.</td></tr>';
            } else if (filteredFunds.length === 0) {
                tbody.innerHTML = '<tr><td colspan="6" style="text-align: center;">No funds match your filters.</td></tr>';
            } else {
                tbody.innerHTML = filteredFunds.map(fund => \`
                    <tr>
                        <td><strong>\${escapeHtml(fund.symbol)}</strong></td>
                        <td>\${escapeHtml(fund.name)}</td>
                        <td>$\${fund.price.toFixed(2)}</td>
                        <td class="\${fund.change >= 0 ? 'positive' : 'negative'}">
                            \${fund.change >= 0 ? '+' : ''}\${fund.change.toFixed(2)}%
                        </td>
                        <td>\${fund.expenseRatio.toFixed(2)}%</td>
                        <td>
                            <button class="buy-btn" onclick="openTrade('\${escapeHtml(fund.symbol)}', 'buy')">Buy</button>
                            <button class="sell-btn" onclick="openTrade('\${escapeHtml(fund.symbol)}', 'sell')">Sell</button>
                            <a href="/indexfund?symbol=\${escapeHtml(fund.symbol)}" style="margin-left: 5px; color: #00ff00; text-decoration: none; border: 1px solid #00ff00; padding: 5px 10px; display: inline-block;">Details</a>
                        </td>
                    </tr>
                \`).join('');
            }
        }
        
        async function loadAccountData() {
            try {
                const response = await fetch('/api/account');
                currentAccountData = await response.json();
            } catch (error) {
                console.error('Error loading account data:', error);
            }
        }
        
        async function openTrade(symbol, action) {
            selectedFund = symbol;
            
            try {
                // Load account data
                await loadAccountData();
                
                // Load fund details
                const response = await fetch(\`/api/indexfunds/\${symbol}\`);
                const fund = await response.json();
                currentPrice = fund.price;
                
                // Calculate trading fee
                const timeResponse = await fetch('/api/time');
                const timeData = await timeResponse.json();
                const gameDate = new Date(timeData.currentTime);
                const year = gameDate.getFullYear();
                
                // Trading fee logic (simplified)
                if (year >= 2019) {
                    tradingFee = 0;
                } else if (year >= 2013) {
                    tradingFee = 0.99;
                } else if (year >= 2000) {
                    tradingFee = 2.99;
                } else if (year >= 1990) {
                    tradingFee = 4.99;
                } else if (year >= 1975) {
                    tradingFee = 7.99;
                } else {
                    tradingFee = 9.99;
                }
                
                document.getElementById('tradeFormTitle').textContent = \`Trade \${fund.symbol} - \${fund.name}\`;
                document.getElementById('fundInfo').innerHTML = \`
                    <p><strong>Symbol:</strong> \${escapeHtml(fund.symbol)}</p>
                    <p><strong>Name:</strong> \${escapeHtml(fund.name)}</p>
                    <p><strong>Description:</strong> \${escapeHtml(fund.description)}</p>
                    <p><strong>Current Price:</strong> $\${fund.price.toFixed(2)}</p>
                    <p><strong>Expense Ratio:</strong> \${fund.expenseRatio.toFixed(2)}% (deducted on sale)</p>
                \`;
                
                document.getElementById('tradeAction').value = action;
                document.getElementById('shares').value = action === 'buy' ? '1' : '0';
                document.getElementById('tradeForm').style.display = 'block';
                document.getElementById('tradeMessage').innerHTML = '';
                
                updateTradeCalculator();
                
                // Scroll to form
                document.getElementById('tradeForm').scrollIntoView({ behavior: 'smooth' });
            } catch (error) {
                alert('Error loading fund details: ' + error.message);
            }
        }
        
        function updateTradeCalculator() {
            const action = document.getElementById('tradeAction').value;
            const shares = parseFloat(document.getElementById('shares').value) || 0;
            
            if (shares <= 0) {
                document.getElementById('costCalculator').style.display = 'none';
                document.getElementById('affordabilityInfo').style.display = 'none';
                document.getElementById('executeTradeBtn').disabled = true;
                return;
            }
            
            const subtotal = currentPrice * shares;
            const totalCost = action === 'buy' ? subtotal + tradingFee : subtotal - tradingFee;
            
            // Update calculator display
            document.getElementById('calcPrice').textContent = \`$\${currentPrice.toFixed(2)}\`;
            document.getElementById('calcShares').textContent = shares.toFixed(2);
            document.getElementById('calcFee').textContent = \`$\${tradingFee.toFixed(2)}\`;
            document.getElementById('calcTotal').textContent = \`$\${totalCost.toFixed(2)}\`;
            document.getElementById('costCalculator').style.display = 'block';
            
            // Check affordability for buys
            if (action === 'buy' && currentAccountData) {
                const cash = currentAccountData.cash || 0;
                const canAfford = cash >= totalCost;
                const maxShares = Math.floor((cash - tradingFee) / currentPrice);
                
                const affordInfo = document.getElementById('affordabilityInfo');
                affordInfo.style.display = 'block';
                
                if (canAfford) {
                    affordInfo.className = 'affordability-info can-afford';
                    affordInfo.innerHTML = \`
                        âœ“ You can afford this purchase<br>
                        Available Cash: $\${cash.toFixed(2)}<br>
                        Max Shares: \${maxShares.toFixed(2)} shares ($\${(maxShares * currentPrice + tradingFee).toFixed(2)} total)
                    \`;
                    document.getElementById('executeTradeBtn').disabled = false;
                } else {
                    affordInfo.className = 'affordability-info cannot-afford';
                    affordInfo.innerHTML = \`
                        âœ— Insufficient funds<br>
                        Available Cash: $\${cash.toFixed(2)}<br>
                        Needed: $\${totalCost.toFixed(2)}<br>
                        Short by: $\${(totalCost - cash).toFixed(2)}
                    \`;
                    document.getElementById('executeTradeBtn').disabled = true;
                }
            } else if (action === 'sell') {
                document.getElementById('affordabilityInfo').style.display = 'none';
                document.getElementById('executeTradeBtn').disabled = false;
            } else {
                document.getElementById('affordabilityInfo').style.display = 'none';
                document.getElementById('executeTradeBtn').disabled = false;
            }
        }
        
        async function executeTrade() {
            const action = document.getElementById('tradeAction').value;
            const shares = parseFloat(document.getElementById('shares').value);
            
            if (!selectedFund || shares <= 0) {
                return;
            }
            
            const messageDiv = document.getElementById('tradeMessage');
            
            try {
                const response = await fetch('/api/indexfunds/trade', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        symbol: selectedFund,
                        shares: shares,
                        action: action
                    })
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    messageDiv.innerHTML = \`<div class="message success">\${escapeHtml(result.message)}</div>\`;
                    setTimeout(() => {
                        cancelTrade();
                        loadFunds();
                        loadAccountData();
                    }, 2000);
                } else {
                    messageDiv.innerHTML = \`<div class="message error">\${escapeHtml(result.error)}</div>\`;
                }
            } catch (error) {
                messageDiv.innerHTML = \`<div class="message error">Error: \${escapeHtml(error.message)}</div>\`;
            }
        }
        
        function cancelTrade() {
            document.getElementById('tradeForm').style.display = 'none';
            selectedFund = null;
        }
        
        // Initialize
        loadFunds();
        loadAccountData();
        setInterval(loadFunds, 10000);
    </script>
    `
}) %>
